@model Usuario
@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="image">
                <img src="../assets/img/damir-bosnjak.jpg" alt="...">
            </div>
            <div class="card-body">
                <p class="description text-center">
                    "I like the way you work it
                    <br> No diggity
                    <br> I wanna bag it up"
                </p>
            </div>
            <div class="card-footer">
                <hr>
                <div class="button-container">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-6 ml-auto">
                            <h5>
                                12
                                <br>
                                <small>Files</small>
                            </h5>
                        </div>
                        <div class="col-lg-4 col-md-6 col-6 ml-auto mr-auto">
                            <h5>
                                2GB
                                <br>
                                <small>Used</small>
                            </h5>
                        </div>
                        <div class="col-lg-3 mr-auto">
                            <h5>
                                24,6$
                                <br>
                                <small>Spent</small>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <form>
                <div class="card-header">
                    <h4 class="card-title">Minhas categorias</h4>
                    <button type="submit" class="btn btn-success btn-round" style="margin-left: 250px; margin-top:-55px;" asp-controller="Categoria" asp-action="Index">+</button>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled team-members">
                        <li>
                            <div class="row" style="overflow: scroll; width: 98%; height: 200px; margin-left: 5px;">
                                @if (ViewBag.Categorias.Count == 0)
                                {
                                    <p class="text-danger" style="margin-left: 20px;"><b>NÃO HÁ CATEGORIAS CADASTRADAS</b></p>
                                }
                                @foreach (Categoria item in ViewBag.Categorias)
                                {
                                    <div class="col-md-7 col-7" style="margin-left: 20px; margin-top: 5px;">
                                        <tr>
                                            <td>
                                                @item.Titulo
                                            </td>
                                        </tr>
                                    </div>
                                    <div class="col-md-3 col-3 text-right" style="margin-left: -100px; margin-top: -10px;">
                                        <a class="btn btn-sm btn-outline-danger btn-round btn-icon" asp-controller="Categoria" asp-route-idCategoria="@item.IdCategoria" asp-action="Remover"><i class="fa fa-trash"></i></a>
                                    </div>
                                    <div class="text-gray" style="margin-left: 25px; margin-bottom: 10px; margin-top: -15px;">
                                        __________________________________________________
                                    </div>
                                }
                            </div>
                        </li>
                    </ul>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">Edit Profile</h5>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4 pr-1">
                            <div class="form-group">
                                <label>Nome</label>
                                <input type="text" class="form-control" asp-for="Nome" value="Nome" />
                                <span asp-validation-for="Nome" class="text-primary"></span>
                            </div>
                        </div>
                        <div class="col-md-4 pr-1">
                            <div class="form-group">
                                <label>Sobrenome</label>
                                <input type="text" class="form-control" asp-for="Sobrenome" value="Sobrenome" />
                                <span asp-validation-for="Sobrenome" class="text-primary"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 pr-1">
                            <div class="form-group">
                                <label>CPF</label>
                                <input type="text" class="form-control" asp-for="Cpf" placeholder="CPF" />
                                <span asp-validation-for="Cpf" class="text-primary"></span>
                            </div>
                        </div>
                        <div class="col-md-3 pr-1">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="E-mail" />
                                <span asp-validation-for="Email" class="text-primary"></span>
                            </div>
                        </div>
                        <div class="col-md-2 pr-1">
                            <div class="form-group">
                                <label>Salário</label>
                                <input type="text" class="form-control" asp-for="Salario" placeholder="Salário" />
                                <span asp-validation-for="Salario" class="text-primary"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 pr-1">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" asp-for="Login" placeholder="Username" />
                                <span asp-validation-for="Login" class="text-primary"></span>
                            </div>
                        </div>
                        <div class="col-md-3 pr-1">
                            <div class="form-group">
                                <label>Senha</label>
                                <input type="text" class="form-control" asp-for="Senha" placeholder="Senha" />
                                <span asp-validation-for="Senha" class="text-primary"></span>
                            </div>
                        </div>
                        <div class="col-md-3 pr-1">
                            <div class="form-group">
                                <label>Confirmar Senha</label>
                                <input type="password" class="form-control" asp-for="ConfirmacaoSenha" placeholder="Confirmar Senha" />
                                <span asp-validation-for="ConfirmacaoSenha" class="text-primary"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="update ml-auto mr-auto">
                            <button type="submit" class="btn btn-success btn-round" value="Editar">Salvar dados</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>