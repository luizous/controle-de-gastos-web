@model Usuario
<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastrar Usuário</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>
        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
            <span asp-validation-for="Nome"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Sobrenome">
            <label asp-for="Sobrenome"></label>
            <input type="text" asp-for="Sobrenome"
                   class="form-control" />
            <span asp-validation-for="Sobrenome"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Cpf">
            <label asp-for="Cpf"></label>
            <input type="text" asp-for="Cpf"
                   class="form-control" />
            <span asp-validation-for="Cpf"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Email">
            <label asp-for="Email"></label>
            <input type="text" asp-for="Email"
                   class="form-control" />
            <span asp-validation-for="Email"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Login">
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login"
                   class="form-control" />
            <span asp-validation-for="Login"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Senha">
            <label asp-for="Senha"></label>
            <input type="text" asp-for="Senha"
                   class="form-control" />
            <span asp-validation-for="Senha"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Salario">
            <label asp-for="Salario"></label>
            <input type="text" asp-for="Salario"
                   class="form-control" />
            <span asp-validation-for="Salario"
                  class="text-primary"></span>
        </div>
        <input type="submit" class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>